<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.sj.com.mypicassoglide.MainActivity">

    <ImageView
        android:id="@+id/head"
        android:layout_width="158dp"
        android:layout_height="118dp"
        android:layout_above="@+id/head4"
        android:layout_marginBottom="72dp"
        android:layout_toEndOf="@+id/head1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <ImageView
        android:id="@+id/head1"
        android:layout_width="104dp"
        android:layout_height="92dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/head2"
        android:layout_width="108dp"
        android:layout_height="87dp"
        android:layout_alignBottom="@+id/head1"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="21dp" />

    <ImageView
        android:id="@+id/head3"
        android:layout_width="104dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="395dp" />

    <demo.sj.com.mypicassoglide.RoundCornerImageView
        android:id="@+id/head4"
        android:layout_width="59dp"
        android:layout_height="107dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/head"
        android:scaleType="fitXY"
        android:src="@drawable/home_img_nothing_d"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="388dp" />

</RelativeLayout>
